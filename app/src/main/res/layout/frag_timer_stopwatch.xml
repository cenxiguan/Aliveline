<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/timerbg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="5dp">
        <TextView
            android:text="Title Goes Here"
            android:id="@+id/title_of_todo"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/time_circle"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:padding="5dp"
                    android:id="@+id/timer_circle"
                    android:layout_centerHorizontal="true"/>
                <Chronometer
                    android:id="@+id/chronometer"
                    android:format="%s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:text="EDIT TIME"
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="120dp"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:text="SUBMIT"
                    android:id="@+id/submit_button"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:textColor="#ff0000"
                    android:background="@drawable/timer_submit"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@+id/timer_circle" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center|bottom">
        <Button
            android:text="START"
            android:id="@+id/start_button"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
        <Button
            android:text="RESET"
            android:id="@+id/reset_button"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>