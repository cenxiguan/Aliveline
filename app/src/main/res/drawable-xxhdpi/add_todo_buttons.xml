<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ADADAD" />
            <corners
                android:radius="2dp" />
            <stroke
                android:width="2dp"
                android:color="#1C1C1C" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ADADAD"
                android:endColor="#6B6B6B"
                android:angle="270" />
            <corners
                android:radius="2dp" />
            <stroke
                android:width="2dp"
                android:color="#1C1C1C" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>