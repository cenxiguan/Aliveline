<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/hl_background" />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#01000000"
                android:endColor="#09000000"
                android:angle="270" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#01000000"
                android:endColor="#0E000000"
                android:angle="270" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:bottom="6dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/light_primary"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>